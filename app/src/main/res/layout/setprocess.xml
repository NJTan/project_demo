<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#2BE28D"
        android:textSize="28dp"
        android:text="设置进度"/>
    <TableLayout
        android:padding="10dp"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="实际开始时间："
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_start_real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择日期" />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_start_real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="项目进度"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/processState"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"></Spinner>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="实际结束时间："
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_end_real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择日期" />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_end_real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
        <LinearLayout>
            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/set_process_content"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:text="提交"
                android:textSize="20dp"
                android:layout_marginLeft="150dp"
                />
        </LinearLayout>
    </TableLayout>

</LinearLayout>
